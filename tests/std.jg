###
	String
###

{String
	~~ buffer:*i8 ~~
	~~ length:i32 ~~
}

[String String
	/let <this String>/
	/asm ~~
		call @String_new() => $this;
		mov void null => $this->$buffer;
		mov void 0:i32 => $this->$length;
		~~/
	this
]

[String_Dispose <this String>
	/let ~~ isnil:i8 ~~/
	/asm ~~
		nil $this->$buffer => $isnil;
		jif $isnil %success %failure;
		success:
		del $this->$buffer;
		failure:
		~~/
]

